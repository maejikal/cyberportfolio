---
import { getCollection } from 'astro:content';
import { siteConfig } from "../config";

const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;

// Get all writeups to match with experience entries
const writeups = hasExperience ? (await getCollection('writeups')).filter(w => !w.data.draft) : [];

// Create a map of experience titles to writeup URLs
const experienceLinks = new Map();
if (hasExperience) {
  siteConfig.experience.forEach(exp => {
    const matchingWriteup = writeups.find(w => 
      w.data.title.toLowerCase() === exp.title.toLowerCase() 
      // ||
      // w.data.ctfName?.toLowerCase() === exp.title.toLowerCase()
    );
    if (matchingWriteup) {
      experienceLinks.set(exp.title, `/cyberportfolio/ctf-writeups/${matchingWriteup.slug}/`);
    }
  });
}
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-[var(--text-primary)]">
              Recent CTFs
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style="background-color: var(--accent-color)"
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {siteConfig.experience.map((exp, index) => {
                const writeupUrl = experienceLinks.get(exp.title) || '/cyberportfolio/ctf-writeups';
                return (
                  <div class="relative mb-12 last:mb-0">
                    {/* Timeline dot at top of card */}
                    <div
                      class="absolute left-1/2 -top-2 w-4 h-4 border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300"
                      style="border-color: var(--accent-color); background-color: var(--accent-color)"
                    />

                    {/* Connecting line below card */}
                    {index < siteConfig.experience.length - 1 && (
                      <div class="absolute left-1/2 bottom-0 w-0.5 h-12 -translate-x-1/2 translate-y-full z-10" style="background-color: var(--border-primary)" />
                    )}

                    {/* Experience card */}
                    <div
                      class="ctf-card block rounded-lg shadow-sm border p-4 sm:p-5 md:p-6 hover:shadow-md transition-all duration-300 cursor-pointer"
                      style="background-color: var(--bg-secondary); border-color: var(--border-primary)"
                      data-href={writeupUrl}
                    >
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                        <div>
                          <h3 class="text-lg sm:text-xl font-semibold text-[var(--text-primary)]">
                            {exp.title}
                          </h3>
                          <p
                            class="text-base sm:text-lg"
                            style="color: var(--accent-color)"
                          >
                            {exp.company}
                          </p>
                        </div>
                        <span class="text-xs sm:text-sm text-[var(--text-secondary)] mt-2 sm:mt-0">
                          {exp.dateRange}
                        </span>
                      </div>

                      <ul class="space-y-2">
                        {exp.bullets.map((bullet) => {
                          const isLink = bullet.startsWith('https');
                          return (
                            <li class="flex items-start">
                              <span class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 flex-shrink-0" style="background-color: var(--text-secondary)" />
                              {isLink ? (
                                <a 
                                  href={bullet} 
                                  target="_blank" 
                                  rel="noopener noreferrer"
                                  class="bullet-link text-sm sm:text-base text-[var(--accent-color)] hover:underline"
                                >
                                  {bullet}
                                </a>
                              ) : (
                                <span class="text-sm sm:text-base text-[var(--text-secondary)]">
                                  {bullet}
                                </span>
                              )}
                            </li>
                          );
                        })}
                      </ul>
                    </div>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<script>
  document.querySelectorAll('.ctf-card').forEach(card => {
    card.addEventListener('click', (e) => {
      // Don't navigate if clicking a bullet link
      if (e.target.closest('.bullet-link')) {
        return;
      }
      const href = card.dataset.href;
      window.location.href = href;
    });
  });
</script>