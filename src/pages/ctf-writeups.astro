---
import { getCollection } from 'astro:content';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WriteupSearch from '../components/WriteupSearch.astro';
import '../styles/global.css';

const allWriteups = (await getCollection('writeups'))
  .filter(writeup => !writeup.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

// Pin the CTF Collection writeup
const pinnedWriteup = allWriteups.find(writeup => writeup.data.title === 'CTF Collection');
const otherWriteups = allWriteups.filter(writeup => writeup.data.title !== 'CTF Collection');
const writeups = pinnedWriteup ? [pinnedWriteup, ...otherWriteups] : allWriteups;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>CTF Writeups</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <br>
    <br>
    <main class="flex-1 max-w-4xl mx-auto px-4 py-10 w-full mt-20">
      <h1 class="text-4xl font-bold mb-8">CTF Writeups</h1>
      <WriteupSearch />
      {writeups.length === 0 ? (
        <p class="text-lg text-gray-700">Coming soon...</p>
      ) : (
        <div class="space-y-6">
          {writeups.map((writeup, index) => (
  <a href={`/cyberportfolio/ctf-writeups/${writeup.slug}/`} class="block hover:shadow-lg transition-shadow p-4 rounded-lg">
    <article class={`writeup-article border-b pb-6 ${index === 0 && pinnedWriteup ? 'bg-blue-50 p-4 rounded-lg border-l-4' : ''}`} 
         style={index === 0 && pinnedWriteup ? 'border-left-color: #e275dbff' : ''}
         data-tags={writeup.data.tags ? writeup.data.tags.join(',') : ''}>
      {index === 0 && pinnedWriteup && (
        <span class="text-sm font-semibold text-blue-600 mb-2 block">ðŸ“Œ Pinned</span>
      )}
      <h2 class="writeup-title text-2xl font-semibold mb-2 hover:text-blue-600">
        {writeup.data.title}
      </h2>
      {writeup.data.ctfName && (
        <p class="writeup-ctf text-sm text-blue-600 font-medium mb-2">{writeup.data.ctfName}</p>
      )}
      <p class="text-sm text-gray-600 mb-3">
        {writeup.data.pubDate.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </p>
      {writeup.data.tags && writeup.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {writeup.data.tags.map(tag => (
            <span class="px-2 py-1 text-xs rounded-full bg-gray-200 text-gray-700">
              {tag}
            </span>
          ))}
        </div>
      )}
      {writeup.data.description && (
        <p class="writeup-description text-gray-700">{writeup.data.description}</p>
      )}
    </article>
  </a>
))}
        </div>
      )}
    </main>
    <Footer />
  </body>
</html>