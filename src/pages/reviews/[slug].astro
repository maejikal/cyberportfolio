---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Sidebar from '../../components/Sidebar.astro';
import MobileTOC from '../../components/MobileTOC.astro';
import Disclaimer from '../../components/Disclaimer.astro';
import ArticleStats from '../../components/ArticleStats.astro';
import RelatedPosts from '../../components/RelatedPosts.astro';
import '../../styles/global.css';
import '../../styles/sidebar.css';
import ThemeProvider from "../../components/ThemeProvider.astro";
import { siteConfig } from "../../config";

export async function getStaticPaths() {
  const reviews = await getCollection('reviews');
  return reviews.map(review => ({
    params: { slug: review.slug },
    props: { review },
  }));
}

const { review } = Astro.props;
const { Content } = await review.render();
---

<html lang="en">
  <head>
    <ThemeProvider themeName={siteConfig.theme}></ThemeProvider>
    <script src="../../scripts/sidebarLogic.js"></script>
    <script src="../../scripts/codeBlockCopy.js"></script>
    <script src="../../scripts/rightSidebarToggle.js"></script>
    <script src="../../scripts/calloutToggle.js"></script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/cyberportfolio/favicon.ico" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{review.data.title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Header />
    <main class="flex-1 w-full px-4 py-10 pt-40">
      <div class="max-w-7xl mx-auto">
        <a href="/cyberportfolio/reviews" class="inline-flex items-center mb-6 text-[var(--accent-color)] hover:text-[var(--accent-dark)]">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Reviews
        </a>

        <div class="flex gap-8 lg:gap-12 relative">
          <!-- Sticky Sidebar (Desktop) -->
          <Sidebar tags={review.data.tags} />

          <!-- Main Article Content + Right Sidebar -->
          <div class="article-and-sidebar">
            <!-- Article -->
            <article class="flex-1 min-w-0 max-w-4xl">
              <div class="flex items-start justify-between mb-4">
                <h1 class="text-4xl font-bold text-[var(--text-primary)]">{review.data.title}</h1>
                {review.data.rating && (
                  <div class="flex items-center gap-1 text-2xl text-yellow-500">
                    {Array.from({ length: review.data.rating }).map(() => (
                      <span>★</span>
                    ))}
                    {Array.from({ length: 5 - review.data.rating }).map(() => (
                      <span class="text-gray-300">★</span>
                    ))}
                  </div>
                )}
              </div>

              <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1.5 text-sm rounded-full font-medium" style="background-color: var(--accent-light); color: var(--accent-color);">
                  {review.data.category}
                </span>
                {review.data.moduleCode && (
                  <span class="text-lg font-medium text-[var(--accent-color)]">
                    {review.data.moduleCode}
                  </span>
                )}
                {review.data.semester && (
                  <span class="text-sm text-[var(--text-secondary)]">
                    {review.data.semester}
                  </span>
                )}
              </div>

              <div class="text-sm mb-4 text-[var(--text-secondary)]">
                <p>
                  Published: {review.data.pubDate.toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </p>
                {review.data.lastUpdated && (
                  <p class="mt-1">
                    Last Updated: {review.data.lastUpdated.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </p>
                )}
              </div>

              {/* Mobile Tags Toggle */}
              {review.data.tags && review.data.tags.length > 0 && (
                <div class="mb-6 lg:hidden">
                  <button 
                    id="mobileToggle" 
                    class="flex items-center gap-2 text-sm font-medium transition-colors"
                    style="color: var(--accent-color);"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    <span id="mobileToggleText">Show Tags ({review.data.tags.length})</span>
                  </button>
                  <div id="mobileTags" class="hidden mt-3 flex flex-wrap gap-2">
                    {review.data.tags.map(tag => (
                      <a 
                        href={`/cyberportfolio/search?q=${encodeURIComponent(tag)}`}
                        class="tag-link px-3 py-1.5 text-sm rounded-full transition-all hover:shadow-md"
                        style="background-color: var(--accent-light); color: var(--text-primary);"
                      >
                        {tag}
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <MobileTOC />

              <div class="prose max-w-none">
                <Content />
              </div>
            </article>

            <!-- Right Sidebar: Stacked Stats and Related Posts with Toggle -->
            <div class="hidden lg:flex flex-col gap-6 relative">
              <button
                id="rightSidebarToggle"
                aria-label="Toggle article info sidebar"
                title="Toggle article info"
                class="self-end"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
                </svg>
              </button>
              <div id="rightSidebar" class="flex flex-col gap-6 w-80">
                <Disclaimer type="review" customDisclaimer={review.data.disclaimer} />
                <ArticleStats pubDate={review.data.pubDate} lastUpdated={review.data.lastUpdated} />
                <RelatedPosts currentSlug={review.slug} tags={review.data.tags} type="review" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
